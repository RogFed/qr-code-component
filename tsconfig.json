{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "module": "es2022",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "checkJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
